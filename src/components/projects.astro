  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 1.5rem;
}

.project-tags {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.project-tags span {
  padding: 0.3rem 0.8rem;
  background: rgba(255, 255, 255, 0.08);
  color: var(--text-secondary);
