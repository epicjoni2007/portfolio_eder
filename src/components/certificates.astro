---
import fs from "fs";
import path from "path";

const dir = path.resolve("./public/Zertifikate");
const files = fs.readdirSync(dir).filter(f => f.endsWith(".pdf"));
---

<section id="certificates">
  <div class="certificates-container">
    <h2>Zertifikate</h2>
    <p class="section-subtitle">Meine Qualifikationen und Zertifizierungen</p>
    <div class="certificates-grid">
      {files.map((file, index) => (
        <div class="certificate-item">
          <div class="certificate-preview">
            <iframe src={`/Zertifikate/${file}#toolbar=0`} title={file} loading="lazy"></iframe>
          </div>
          <div class="certificate-info">
            <p class="cert-name">{file.replace('.pdf', '')}</p>
          
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
#certificates {
  padding: 6rem 2rem;
  background: linear-gradient(135deg, rgba(255, 0, 110, 0.05) 0%, rgba(131, 56, 236, 0.05) 100%);
  border-top: 1px solid var(--border-color);
}

.certificates-container {
  max-width: 1200px;
  margin: 0 auto;
}

.section-subtitle {
  text-align: center;
  color: var(--text-secondary);
  font-size: 1.1rem;
  margin-bottom: 3rem;
}

.certificates-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
}

.certificate-item {
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 15px;
  overflow: hidden;
  backdrop-filter: blur(10px);
  transition: var(--transition);
}

.certificate-item:hover {
  border-color: var(--primary);
  background: rgba(0, 212, 255, 0.05);
  transform: translateY(-8px);
}

.certificate-preview {
  width: 100%;
  height: 280px;
  overflow: hidden;
  background: var(--bg-dark);
  border-bottom: 1px solid var(--border-color);
}

.certificate-preview iframe {
  width: 100%;
  height: 100%;
  border: none;
}

.certificate-info {
  padding: 1.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cert-name {
  font-size: 0.95rem;
  color: var(--text-secondary);
  font-weight: 500;
  margin: 0;
  max-width: 60%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.cert-download {
  padding: 0.6rem 1rem;
  background: rgba(0, 212, 255, 0.15);
  color: var(--primary);
  border-radius: 8px;
  text-decoration: none;
  font-size: 0.85rem;
  font-weight: 600;
  transition: var(--transition);
  border: 1px solid transparent;
}

.cert-download:hover {
  background: var(--primary);
  color: var(--bg-dark);
  border-color: var(--primary);
}

@media (max-width: 768px) {
  .certificates-grid {
    grid-template-columns: 1fr;
  }

  .certificate-preview {
    height: 200px;
  }
}
</style>
